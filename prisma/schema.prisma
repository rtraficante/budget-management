generator client {
    provider = "prisma-client-js"
}

datasource db {
    provider = "postgresql"
    url      = env("DATABASE_URL")
}

model Transaction {
    id          Int       @id @default(autoincrement())
    amount      Decimal   @db.Money
    description String?
    date        DateTime
    category    Category? @relation(fields: [categoryId], references: [id])
    categoryId  Int?
    userId      String

    @@index([userId])
}

model Category {
    id           Int           @id @default(autoincrement())
    name         String
    transactions Transaction[]
}

model CreditCard {
    id       Int              @id @default(autoincrement())
    provider String
    nickname String
    dueDate  DateTime
    status   CreditCardStatus @default(UNPAID)
    userId   String
}

enum CreditCardStatus {
    PAID
    UNPAID
    LATE
}
